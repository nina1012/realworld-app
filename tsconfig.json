{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "jest"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "global.d.ts",
    "./src/**/**.*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "cypress",
    "cypress.config.ts" // https://github.com/cypress-io/cypress/issues/25894#issuecomment-1799475985 this helped get rid of the bug
  ]
}
